        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="25dp"
                android:background="#000000"/>

            <ImageView
                android:id="@+id/sponsor1"
                android:src="@drawable/ad1"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor2"
                android:src="@drawable/ad2"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/sponsor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor3"
                android:src="@drawable/ad3"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/sponsor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor4"
                android:src="@drawable/ad4"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/sponsor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor5"
                android:src="@drawable/ad5"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/sponsor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor6"
                android:src="@drawable/ad6"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/sponsor5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/sponsor7"
                android:src="@drawable/ad7"
